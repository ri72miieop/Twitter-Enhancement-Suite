{
  "name": "twitter-enhancement-suite",
  "displayName": "TES: Twitter Enhancement Suite",
  "version": "0.0.2",
  "description": "An extension to enhance your Twitter experience.",
  "author": "IaimforGOAT",
  "scripts": {
    "dev": "plasmo dev --entry=options --env=.env.development",
    "build": "plasmo build --env=.env.development",
    "package": "plasmo package --env=.env.development",
    "tailwind": "npx tailwindcss -i ./input.css -o ./prod.css",
    "tailwind:watch": "npx tailwindcss -i ./input.css -o ./prod.css --watch",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "dev:brave": "plasmo dev --target=brave-mv3",
    "build:chrome": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "build:brave": "plasmo build --target=brave-mv3",
    "prod:build":"plasmo build --tag=prod --env=.env.production --zip"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@parcel/diagnostic": "^2.12.0",
    "@plasmohq/messaging": "0.6.2",
    "@plasmohq/storage": "1.12.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-icons": "^1.3.1",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@supabase/supabase-js": "2.39.3",
    "async-mutex": "^0.5.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "lucide-react": "^0.453.0",
    "plasmo": "0.89.4",
    "posthog-js": "^1.184.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "svgo": "^3.0.2",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.20",
    "https-browserify": "^1.0.0",
    "postcss": "^8.4.47",
    "prettier": "3.2.4",
    "stream-http": "^3.1.0",
    "tailwindcss": "^3.4.14",
    "typescript": "5.3.3"
  },
  "manifest": {
    "key": "$CRX_KEY",
    "permissions": [
      "storage",
      "tabs",
      "activeTab",
      "https://*.twitter.com/*",
      "https://*.x.com/*"
    ],

    "web_accessible_resources": [
      {
        "resources": [
          "options.html",
          "assets/custom/nopfp2_4832.jpg",
          "prod.css",
          "input.css"
        ],
        "matches": [
          "<all_urls>"
        ],
        "extension_ids": [
          "$CRX_ID"
        ]
      }
    ]
  }
}
